    </div>
    <div id = "big-card-details">
      <div>
        <p>menu description</p>
      </div>
      <div>
        <p>menu advice</p>
      </div>
      <div id = "back-invitation">
        <div style="margin-top:20px">
        <p>BACK TO MENU</p>
        </div>
        <div id = "back-button">
          <img src="https://res.cloudinary.com/minquant/image/upload/v1679308978/mascott_stretch_dyhqqi.png" alt="">
        </div>
      </div>
    </div>
  </div>
</div>


<%# small menu card just in case %>
<%# div for both image and details %>
  <% menu_items.each do |menu_item| %>

    <div class="menu-card-container"
    data-controller="expand"
    data-action="click->expand#popout">
      <%# image %>
      <div
      data-action="scroll@window->menu-scrolling#colors"
      class="menu-image-container">
        <%= cl_image_tag(menu_item.photos.first.key) %>
      </div>
      <%# details %>
      <div class="menu-card-description-container">
        <%# name and price %>
        <div class="menu-card-title-container">
          <h3><%= menu_item.name %></h3>
          <h4>¥<%=menu_item.price%></h4>
        </div>
        <%# description %>
        <div>
          <p style="color:black"><%= menu_item.description %></p>
          <br>
          <p style="color:black"><%= menu_item.advice %></p>
        </div>
      </div>
    </div>

  <% end %>
