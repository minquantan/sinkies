<div id = "big-card-frame">
  <div id = "heading-holder">
    <div class = "thumbnail-holder">
      <div class="thumbnail-image active first-dot" data-controller="modal-slideshow" data-action="click->modal-slideshow#changeImage"><img src="https://res.cloudinary.com/minquant/image/upload/v1/development/6t77uhhs2b8pp9oy7klg5gkg5cbu" alt=""></div>
