<%= render "navbar" %>

<%# div for scrolling javascript event %>
<div class="page-container"
  data-controller="menu-scrolling"
  data-action="scroll@window->menu-scrolling#colors">
  <%# Menu page heading and item categories %>
  <div class='page-intro'>

    <%# Page heading %>
    <div>
      <h1>MENU</h1>
    </div>

    <%# Menu categories %>
    <div class='intro-content'>

      <div>
        <h3>CATEGORIES</h3>
      </div>

      <div id='categories' class='menu-categories'>
        <h3 style="font-size:28px">MAIN COURSE</h3>
        <h3 style="font-size:28px">SNACKS</h3>
        <h3 style="font-size:28px">DESSERTS</h3>
        <h3 style="font-size:28px">DRINKS</h3>
        <h3 style="font-size:28px">SET MEALS</h3>
      </div>

    </div>

  </div>

  <div id="menu-displays">
    <%# container to align all menu cards %>
    <div id="main-courses-container" class="menu-items-container">
      <%= render 'menu_card', menu_items: @main_courses %>
    </div>
    <div id="snacks-container" class="menu-items-container">
      <%= render 'menu_card', menu_items: @snacks %>
    </div>
    <div id="desserts-container" class="menu-items-container">
      <%= render 'menu_card', menu_items: @desserts %>
    </div>
    <div id="set-meals-container" class="menu-items-container">
      <%= render 'menu_card', menu_items: @set_meals %>
    </div>
    <div id="drinks-container" class="menu-items-container">
      <%= render 'menu_card', menu_items: @drinks %>
    </div>
  </div>

</div>
