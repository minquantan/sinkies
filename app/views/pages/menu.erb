<%= render "navbar" %>

<%# Menu page heading and item categories %>
<div class='page-intro'>

  <%# Page heading %>
  <div>
    <h1>MENU</h1>
  </div>

  <%# Menu categories %>
  <div class='intro-content'>

    <div>
      <h3>CATEGORIES</h3>
    </div>

    <div class='menu-categories'>
      <h3 style="font-size:28px">MAIN COURSE</h3>
      <h3 style="font-size:28px">SNACKS</h3>
      <h3 style="font-size:28px">DESSERTS</h3>
      <h3 style="font-size:28px">DRINKS</h3>
      <h3 style="font-size:28px">SET MEALS</h3>
    </div>

  </div>

</div>

<%# container to align all menu cards %>
<div class="menu-items-container">

  <%# div for both image and details %>
  <% @main_courses.each do |main_course| %>

    <div class="menu-card-container">
      <%# image %>
      <div class="menu-image-container">
        <%= cl_image_tag(main_course.photos.first.key) %>
      </div>
      <%# details %>
      <div class="menu-card-description-container">
        <%# name and price %>
        <div class="menu-card-title-container">
          <h3><%= main_course.name %></h3>
          <h4>Â¥<%=main_course.price%></h4>
        </div>
        <%# description %>
        <div>
          <p><%= main_course.description %></p>
        </div>
      </div>
    </div>

  <% end %>

</div>
